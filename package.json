{
  "name": "verb-repo-helpers",
  "description": "Commonly used helpers for adding repository-related data to templates in verb projects.",
  "version": "1.0.0",
  "homepage": "https://github.com/verbose/verb-repo-helpers",
  "author": "Jon Schlinkert (https://github.com/jonschlinkert)",
  "repository": "verbose/verb-repo-helpers",
  "bugs": {
    "url": "https://github.com/verbose/verb-repo-helpers/issues"
  },
  "license": "MIT",
  "files": [
    "index.js",
    "utils.js"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=8.0"
  },
  "scripts": {
    "test": "mocha"
  },
  "dependencies": {
    "format-people": "^0.1.4",
    "get-pkg": "^1.0.1",
    "get-value": "^3.0.1",
    "github-contributors": "^0.4.1",
    "helper-apidocs": "^0.5.1",
    "helper-copyright": "^2.1.2",
    "helper-date": "^1.0.1",
    "helper-issue": "^0.3.0",
    "helper-reflinks": "^4.0.0",
    "helper-related": "^1.0.0",
    "is-valid-app": "^0.3.0",
    "mixin-deep": "^1.3.1"
  },
  "devDependencies": {
    "engine-base": "^0.1.3",
    "gulp-format-md": "^1.0.0",
    "mocha": "^5.2.0",
    "templates": "^1.2.9"
  },
  "keywords": [
    "api docs",
    "apidocs",
    "code comments",
    "contributors",
    "copyright",
    "docs",
    "documentation",
    "generate",
    "generator",
    "github",
    "github-contributors",
    "helper",
    "helper-apidocs",
    "helper-copyright",
    "helper-issue",
    "helper-related",
    "helpers",
    "issue",
    "jsdoc",
    "markdown",
    "plugin",
    "readme",
    "reflinks",
    "related",
    "repo",
    "template",
    "templates",
    "verb",
    "verb-generator",
    "verbgenerator",
    "verbhelper",
    "verbplugin"
  ],
  "verb": {
    "run": true,
    "toc": false,
    "layout": "default",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "related": {
      "list": [
        "verb",
        "verb-readme-generator",
        "verb-repo-data"
      ]
    },
    "lint": {
      "reflinks": true
    }
  }
}
